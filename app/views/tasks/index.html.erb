<h1>My Tasks:</h1>

<div>
  <% @tasks.each do |task| %>
    <div class="border rounded border-warning w-25 mb-3 p-2 d-flex justify-content-between">
      <p><%= link_to task.title, task_path(task.id) %><p>
      <%= link_to task_path(task),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
      <i class="fa-regular fa-trash-can"></i>
      <% end %>
    </div>
  <% end %>
</div>

<div class="badge badge-primary"><%= link_to "+ Add new task", tasks_new_path %></div>
